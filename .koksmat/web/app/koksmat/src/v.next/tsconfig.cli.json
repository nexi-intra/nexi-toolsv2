{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
     "@/*": ["./*"]
    }
  },
  "include": ["cli/**/*",
],
  "exclude": ["node_modules", "**/*.spec.ts"]
}